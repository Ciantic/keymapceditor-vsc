{
    "name": "qmkmapper-vsc",
    "displayName": "QMKMapper keymap.c viewer and editor",
    "description": "GUI and a visualizer to edit keymap.c files of the QMK Firmaware",
    "version": "0.5.1",
    "publisher": "Ciantic",
    "galleryBanner": {
        "color": "#5c2d91",
        "theme": "dark"
    },
    "bugs": {
        "url": "",
        "email": ""
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Ciantic/qmkmapper-vsc"
    },
    "homepage": "",
    "categories": ["Other"],
    "engines": {
        "vscode": "^1.13.1"
    },
    "activationEvents": ["onCommand:qmkmapper.showQmkMapperKeymapPreview"],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "qmkmapper.showQmkMapperKeymapPreview",
                "title": "QMKMapper keymap.c preview"
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "command": "qmkmapper.showQmkMapperKeymapPreview",
                    "when": "resourceLangId == c"
                }
            ]
        },

        "configuration": {
            "type": "object",
            "title": "Markdown",
            "order": 20,
            "properties": {
                "qmkmapper._urlPrefix": {
                    "type": "string",
                    "default": "",
                    "description": "Development feature, URL prefix for the iframe/webhost in preview"
                }
            }
        }
    },
    "scripts": {
        "clean": "rimraf out/*",
        "qmkmapper": "npm run build --prefix ../qmkmapper/ && ncp ../qmkmapper/build ./out/qmkmapper",
        "vscode:prepublish": "npm run clean && tsc -p ./ && npm run qmkmapper ",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "tslint": "tslint -c tslint.json src/extension.ts"
    },
    "devDependencies": {
        "@types/node": "*",
        "ncp": "^2.0.0",
        "rimraf": "^2.6.1",
        "typescript": "^2.1.4",
        "vscode": "^1.0.0"
    }
}
